<UserControl x:Class="CostOfRevenue.Views.Pages.Recipes.RecipeAddDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CostOfRevenue.Views.Pages.Recipes"
             xmlns:converter="clr-namespace:CostOfRevenue.Helpers"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:models="clr-namespace:CostOfRevenue.Models"
             xmlns:pages="clr-namespace:CostOfRevenue.ViewModels.Pages"
             mc:Ignorable="d" Name="recipesDialog"
             d:DataContext="{d:DesignInstance pages:RecipesVM, IsDesignTimeCreatable=False}"
             MinWidth="560" Height="360">
    <UserControl.Resources>
        <converter:PriceToString x:Key="PriceToString"/>
        <converter:DecimalConverter x:Key="DecimalConverter"/>
        <converter:EnumUnitToDescription x:Key="EnumUnitToDescription"/>
    </UserControl.Resources>
    <Grid Margin="1 1 1 1" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:Card Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:TextBox PlaceholderText="Nom de la recette..."
                        Text="{Binding SelectedName}"/>
            </Grid>
        </ui:Card>

        <ui:Card Margin="0 0 0 0" Grid.Row="1" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              IsTextSearchCaseSensitive="False"
                              TextSearch.TextPath="Name"
                              SelectedValue="{Binding SelectedIngredient}"
                              ItemsSource="{Binding AllIngredients}"
                              VerticalAlignment="Stretch">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ui:Button Content="Ajout"
                           Grid.Column="3" Margin="10 0 0 0" 
                           Command="{Binding AddIngredientToRecipeCommand}"/>
                </Grid>
                <ListView ItemsSource="{Binding SelectedRecipeIngredients, Mode=TwoWay}"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Row="1">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Ingredient}">
                            <Grid Margin="8,0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0 0 10 0"
                                   Text="{Binding Ingredient.Name, Mode=OneWay}" />
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <TextBlock
                                   VerticalAlignment="Center"
                                   Text="{Binding Ingredient.Price, Mode=OneWay, Converter={StaticResource PriceToString}, ConverterParameter='0.00'}" />
                                    <TextBlock
                                   VerticalAlignment="Center"
                                   Text=" / " />
                                    <TextBlock
                                   VerticalAlignment="Center"
                                   Margin="0 0 10 0"
                                   Text="{Binding Ingredient.Unit, Mode=OneWay, Converter={StaticResource EnumUnitToDescription}, ConverterParameter=true}" />
                                </StackPanel>
                                <ui:TextBox Text="{Binding Quantity}"
                                        PlaceholderText="Quantité..." Grid.Column="2"/>

                                <ui:Button Icon="{ui:SymbolIcon Delete24}"
                                   Grid.Column="4"
                                   Command="{Binding DataContext.RemoveIngredientToRecipeCommand, ElementName=recipesDialog}"
                                   CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ui:Card>
    </Grid>
</UserControl>
